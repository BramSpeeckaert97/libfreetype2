ifeq (linux,$(findstring linux,$(TARGET)))

CONFIGURE_FLAGS := \
    --without-zlib \
    --disable-shared \
    --with-pic=yes \
    $(NULL)

ifeq (eabi,$(findstring eabi,$(TARGET)))

    CC ?= $(TARGET)-gcc
    AR ?= $(TARGET)-ar

    CONFIGURE_FLAGS += \
        --host=$(TARGET)

    ifeq (androideabi,$(findstring androideabi,$(TARGET)))

        CONFIGURE_FLAGS += \
            --with-sysroot=$(ANDROID_TOOLCHAIN)/sysroot \
            $(NULL)

    endif

else

CC ?= gcc
AR ?= ar

endif


SRC_DIR = $(shell pwd)

.PHONY: all
all:
	cd $(OUT_DIR) && CC="$(CC)" AR="$(AR)" $(SRC_DIR)/configure $(strip $(CONFIGURE_FLAGS))
	cd $(OUT_DIR) && make -j4
	cp $(OUT_DIR)/.libs/libfreetype.a $(OUT_DIR)
	cp -R include $(OUT_DIR)

else

.PHONY: all
all:

endif
